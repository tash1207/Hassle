<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/btn_hassle"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/lvw_contacts_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#999999"
        android:contentDescription="@string/photo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lvw_contacts_image"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="6dp" >

        <TextView
            android:id="@+id/lvw_contacts_name"
            style="@style/lvw_contacts_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name" />

        <TextView
            android:id="@+id/lvw_contacts_phone"
            style="@style/lvw_contacts_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone" />

        <TextView
            android:id="@+id/lvw_contacts_email"
            style="@style/lvw_contacts_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email" />

        <TextView
            android:id="@+id/lvw_contacts_twitter"
            style="@style/lvw_contacts_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/twitter" />
    </LinearLayout>

</RelativeLayout>